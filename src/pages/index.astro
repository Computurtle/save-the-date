---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <Header />
  
  <div class="home-container">
    <!-- 1. The Announcement -->
    <section class="intro">
      <h1 class="names">
        <span class="name-josh">Josh</span> 
        <span class="amp">&</span> 
        <span class="name-lina">Lina</span>
      </h1>
      <p class="date">October 14th - 16th, 2026</p>
      <p class="location">Chambre Estate, Margaret River</p>
    </section>

    <!-- 2. The Couple -->
    <div class="photo-frame">
      <img src="/us.jpeg" alt="Josh and Lina" class="photo" />
    </div>

    <!-- 3. The Welcome Note -->
    <div class="glass-card welcome-card">
      <h2>We're getting married!</h2>
      <p>
        We are so excited to celebrate our special weekend with our favourite people. 
        Get ready for good food, great vibes, and a little bit of magic.
      </p>
    </div>

    <!-- 4. Quick Links Grid -->
    <div class="grid-links">
      <a href="/itinerary" class="glass-card link-card">
        <h3>The Plan</h3>
        <p>See what's happening &rarr;</p>
      </a>
      <a href="/location" class="glass-card link-card">
        <h3>The Place</h3>
        <p>Chambre Estate &rarr;</p>
      </a>
    </div>
  </div>
</Layout>

<style>
  .home-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-8);
    max-width: var(--max-width-md); /* Keep home page focused/narrower */
    margin: 0 auto;
    text-align: center;
    padding-bottom: var(--space-12);
  }

  .names {
    font-family: var(--font-logo);
    font-size: var(--font-size-7xl);
    margin-bottom: var(--space-2);
    line-height: 1.1;
  }

  .name-josh { color: var(--color-secondary); }
  .amp { color: var(--color-text); font-size: 0.8em; }
  .name-lina { color: var(--color-primary); }

  .date {
    font-family: var(--font-heading);
    font-size: var(--font-size-2xl);
    color: var(--color-text);
    font-weight: 500;
  }

  .location {
    font-size: var(--font-size-lg);
    color: var(--color-text-light);
    margin-top: var(--space-1);
  }

  /* Glass Card Styles */
  .glass-card {
    background: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.6);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    box-shadow: var(--shadow-lg);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .photo-frame {
    padding: var(--space-3);
    background: rgba(255, 255, 255, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.6); /* Added border */
    border-radius: var(--radius-2xl);
    transform: rotate(-2deg); /* Jaunty angle */
    transition: transform 0.3s ease;
    margin-bottom: var(--space-8); /* Extra spacing below photo */
    box-shadow: var(--shadow-lg); /* Added shadow for depth */
  }

  .photo-frame:hover {
    transform: rotate(0deg) scale(1.02);
  }

  .photo {
    width: 280px;
    height: 350px;
    object-fit: cover;
    border-radius: var(--radius-xl);
    display: block;
  }

  .welcome-card {
    max-width: 100%;
  }

  .welcome-card h2 {
    font-family: var(--font-heading);
    color: var(--color-secondary);
    margin-bottom: var(--space-4);
  }

  .grid-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
    width: 100%;
  }

  .link-card {
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.2s ease;
    padding: var(--space-6);
  }

  .link-card:hover {
    background: rgba(255, 255, 255, 0.6);
    transform: translateY(-2px);
  }

  .link-card h3 {
    font-family: var(--font-heading);
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-2);
    color: var(--color-primary);
  }

  @media (max-width: 640px) {
    .names { font-size: var(--font-size-5xl); }
    .grid-links { grid-template-columns: 1fr; }
  }
</style>
